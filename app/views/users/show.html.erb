<div class="container">
  <div class="row">
    <div class="col-4">
      <div class="card-style">
        <div class="card-body text-center">
          <%= image_tag @user.avatar.url, :class => "img-fluid img" %>
          <h4 class="card-title username-style"><br><%= @user.name %></h4>
          <p class="card-text ">
            <%= @user.birthday %><br>
            <%= @user.bio %><br>
            <img src="/assets/location-pointer.svg" height="15" width="15">
            <%= @user.country %></img>
            <div class="stats">
               <a>Tweets
                <strong id="following" class="stat">
                  <%= @user.tweets.count %>
                </strong></a>
                <a>Following
                  <strong id="following" class="stat">
                    <%= @user.followeds.count %>
                  </strong>
                </a>
                  <a>Followers
                  <strong id="followers" class="stat">
                    <%= @user.followers.count %>
                  </strong></a>
              </div>
            <br><br>

          </p>
        </div>
      </div>
    </div>

    <div class="col-8">
      <div class="align-items-center centerblock">
        <div class="card othertable">
          <div class="card-body">
            <% if @tweets.count == 0 %>
            <div class="text-center">
            <h3>No tweets available</h3>
            </div>
            <% else %>
            <br><% @tweets.each do |f| %>
            <div class="info">
            <%= image_tag @user.avatar.url, :class => "img-fluid thumbnail"%>
            <b><%= @user.name %> </b>
            <%= f.created_at.strftime(" %d %B")  %><br>
            <%= f.message %>
            <hr>
            </div>
            <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>


  </div>
</div>


